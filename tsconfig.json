{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "jsx": "preserve",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "strict": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "rootDir": "./src/ts",
        "outDir": "./src/js",
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}